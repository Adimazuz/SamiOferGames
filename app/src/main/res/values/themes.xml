<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GameAlerts" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/main_bright</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="mySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#5C00FF</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FB0000</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#B7F3F308</item>
    </style>

    <style name="myThems" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#FB0000</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#5C00FF</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">#B7F3F308</item>

        <item name="colorControlActivated">#387ADD</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>

    <declare-styleable name="TimePreference">
        <attr name="showText" format="boolean" />
        <attr name="labelPosition" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>

    <style name="PreferenceScreen" parent="Theme.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="colorPrimary">#ff0000</item>
        <item name="colorPrimaryDark">#ff0000</item>
        <item name="colorAccent">#ff0000</item>
        <item name="android:background">#CCCCCC</item>
    </style>

